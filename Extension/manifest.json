{
  "manifest_version": 2,

  "name": "Better Mixer",
  "version": "1.5.2",

  "icons": {"128": "Icons/icon.png"},

  "short_name": "Better Mixer",
  "description": "Improvements to Mixer.com",

  "author": "Unlocked",

  "permissions": [
    "tabs",
    "storage",
    "https://mixer.com/*"
  ],

  "content_scripts": [
    {
      "matches": ["https://mixer.com/*"],
      "js": ["lib/js/jquery-3.3.1.min.js", "lib/js/jquery.initialize.min.js", "chatcontent.js"]
    }
  ],

  "web_accessible_resources": [
    "lib/**/*.*"
  ],

  "background": {
    "scripts": [
      "background.js"
    ]
  }
}
